{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts"
  ]
}
